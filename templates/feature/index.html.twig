{% extends 'baseadmin.html.twig' %}

{% block title %}Caractéristiques{% endblock %}

{% block body %}
    <div class="row py-3 border-bottom">
        <h1>Caractéristiques</h1>
    </div>
    <div class="row py-3 border-bottom">
        <a href="{{ path('app_feature_new') }}">Ajouter une caractéristique</a>
    </div>
    <div class="row py3">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for feature in features %}
                <tr>
                    <td>{{ feature.id }}</td>
                    <td>{{ feature.name }}</td>
                    <td>
                        {% if feature.image.path is defined %}
                            <img
                                    class="crud-thumbnail"
                                    src="{{ asset('images/' ~ feature.image.path) }}"
                                    alt="icône de {{ feature.name }}">
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_feature_show', {'id': feature.id}) }}">Voir</a>
                        <a href="{{ path('app_feature_edit', {'id': feature.id}) }}">Modifier</a>
                        {{ include('feature/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Pas de caractéristiques trouvées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

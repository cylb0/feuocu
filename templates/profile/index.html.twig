{% extends 'basenav.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

        <div class="container my-3 text-center">
            <div class="row">
                <div class="col-12 mx-auto border-bottom">
                    <h1>Mon compte</h1>
                    <h2 class="h5">Ici vous pouvez gérer les informations relatives à votre compte.</h2>
                </div>
            </div>
            <div class="row mt-3">
                <ul class="list-unstyled d-flex flex-column gap-2">
                    <li class="profile-link">
                        <a class="text-reset text-decoration-none" href="{{ path('app_change_profile') }}">
                            Modifier mon profil
                        </a>
                    </li>
                    <li class="profile-link">
                        <a class="text-reset text-decoration-none" href="{{ path('app_change_password') }}">
                            Changer votre mot de passe
                        </a>
                    </li>
                    <li class="profile-link">
                        <a class="text-reset text-decoration-none fw-bolder" href="{{ path('app_logout') }}">
                            Déconnexion
                        </a>
                    </li>
                </ul>
            </div>
        </div>


    {% endif %}
{% endblock %}

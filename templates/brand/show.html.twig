{% extends 'baseadmin.html.twig' %}

{% block title %}Marques{% endblock %}

{% block body %}
    <div class="row py-3 border-bottom">
        <h1>{{ brand.name }}</h1>
    </div>
    <div class="row py-3 border-bottom">
        <a href="{{ path('app_brand_index') }}">Retour Ã  la liste</a>
        <a href="{{ path('app_brand_edit', {'id': brand.id}) }}">Modifier</a>

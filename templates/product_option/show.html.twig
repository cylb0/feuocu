{% extends 'baseadmin.html.twig' %}

{% block title %}{{ product_option.name }}{% endblock %}

{% block body %}
    <div class="row py-3 border-bottom">
        <h1>{{ product_option.name }}</h1>
    </div>
    <div class="row py-3 border-bottom">
        <a href="{{ path('app_product_option_index') }}">Retour à la liste</a>
        <a href="{{ path('app_product_option_edit', {'id': product_option.id}) }}">Modifier</a>
    </div>
    <div class="row py-3">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_option.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product_option.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product_option.type == 'dropdown' ? 'Liste déroulante' : (product_option.type == 'color' ? 'Couleur' : '') }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
